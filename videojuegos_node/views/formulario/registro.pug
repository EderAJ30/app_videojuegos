extends ../layout/index2

block content
    form(action="register" method="POST")
        h2 Bienvenido
        fieldset
            legend Llena los siguientes campos:
            .form_input
            label(for="nombre") Nombre(s)
            input(type="text" id="nombre" name="nombre")
            .form_input
            label(for="ap_paterno") Apellido paterno
            input(type="text" id="ap_paterno" name="ap_materno")
            .form_input
            label(for="ap_materno") Apellido materno
            input(type="text" id="ap_materno" name="ap_paterno")
            .form_input
            label(for="email") Email
            input(type="email" placeholder="my_email14@mail.com" id="email" name="correo")
            .form_input
            label(for="telefono") Teléfono
            input(type="tel" id="telefono" maxlength="10" name="telefono")
            .form_input
            label(for="user_name") User Name
            input(type="text" id="user_name" name="username")
            .form_input
            label(for="contraseña") Contraseña
            input(type="password" id="contraseña" name="pass")
            .form_input
            label(for="rol") Rol
            input(type="number" min="1" max="2" id="rol" name="id_rol")
            .form_input
            input(type="submit" value="Registrarse" class="button")
