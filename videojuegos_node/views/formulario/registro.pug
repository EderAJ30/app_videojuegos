extends ../layout/index2

block content
    form(action="" method="POST")
        h2 Bienvenido
        fieldset
            legend Llena los siguientes campos:
            .form_input
            label(for="nombre") Nombre(s)
            input(type="text" id="nombre")
            .form_input
            label(for="ap_paterno") Apellido paterno
            input(type="text" id="ap_paterno")
            .form_input
            label(for="ap_materno") Apellido materno
            input(type="text" id="ap_materno")
            .form_input
            label(for="telefono") Teléfono
            input(type="tel" id="telefono" maxlength="10")
            .form_input
            label(for="email") Email
            input(type="email" placeholder="my_email14@mail.com" id="email")
            .form_input
            label(for="contraseña") Contraseña
            input(type="password" id="contraseña")
            .form_input
            a(href="/" type="submit" class="button") Registrarse
