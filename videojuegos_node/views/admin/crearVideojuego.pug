extends ../layout/index2.pug

block content
  form(action="/admin/crearVideojuego", method="POST" enctype="multipart/form-data")
    div
        label(for="titulo") TÃ­tulo del Videojuego:
        input(type="text", name="titulo", required=true)

    div
        label(for="imagen") Imagen del Videojuego:
        input(type="file" name="imagen" required)

    div
        label(for="trailer") URL del Trailer:
        input(type="text", name="trailer", required=true)

    div
        label(for="id_plataforma") Plataforma:
        select(name="id_plataforma", id="id_plataforma", required=true)
            each datos in info
                option(value=datos.dato1 selected) #{datos.dato2}
    div
        label(for="costo") Costo:
        input(type="number", name="costo", required=true)

    div
        label(for="precio") Precio:
        input(type="number", name="precio", required=true)

    div
        label(for="stock") Stock:
        input(type="number", name="stock", required=true)

    div
        button(type="submit" class="button") Crear Videojuego

